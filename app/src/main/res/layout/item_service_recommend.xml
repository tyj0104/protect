<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_service_recommend_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_service_recommend_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#3000"/>

    <TextView
        android:id="@+id/item_service_recommend_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/item_service_recommend_iv"
        android:text="老田"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_service_recommend_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_service_recommend_name_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/item_service_recommend_iv"
        android:text="老田的公司需求小杜"
        android:textSize="14sp"/>

    <com.example.jay.myapplication.widget.RatingBarView
        android:id="@+id/item_service_recommend_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:starCount="5"
        app:starEmpty="@mipmap/icon_star_normal"
        app:starFill="@mipmap/icon_star_fill"
        app:starHalf="@mipmap/icon_star_half"
        app:starSize="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>